{
  "name": "@scheduler/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src tests --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:prisma:sprint": "rm -f test-prisma.db test-prisma.db-journal && SPRINT_REPOSITORY_DRIVER=prisma DATABASE_URL=file:./test-prisma.db prisma migrate deploy --schema prisma/schema.prisma && SPRINT_REPOSITORY_DRIVER=prisma DATABASE_URL=file:./test-prisma.db vitest run --maxWorkers=1 tests/sprint.test.ts tests/sprint-availability.test.ts tests/sprint-runs.test.ts",
    "format": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "db:generate": "prisma generate --schema prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
    "db:studio": "prisma studio --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@prisma/adapter-libsql": "^7.4.2",
    "@prisma/client": "^7.4.2",
    "@scheduler/domain": "workspace:*",
    "dotenv": "^17.3.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.10",
    "eslint": "^9.21.0",
    "prettier": "^3.5.3",
    "prisma": "^7.4.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.9"
  }
}
