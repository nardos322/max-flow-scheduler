{
  "name": "max-flow-scheduler",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.6.0",
  "scripts": {
    "dev": "pnpm -r --parallel --filter ./apps/** run dev",
    "build": "pnpm -r --filter ./apps/** --filter ./packages/** run build",
    "lint": "pnpm -r --filter ./apps/** --filter ./packages/** run lint",
    "test": "pnpm -r --filter ./apps/** --filter ./packages/** run test && pnpm test:engine-cpp",
    "typecheck": "pnpm -r --filter ./apps/** --filter ./packages/** run typecheck",
    "format": "pnpm -r --filter ./apps/** --filter ./packages/** run format",
    "test:engine-cpp": "bash scripts/run-engine-tests.sh",
    "ci": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "eslint": "^9.21.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.9"
  }
}
